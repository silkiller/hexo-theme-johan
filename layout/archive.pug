/* Archive Page Styles */
.archive {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}

/* Year header */
.archive h1 {
  font-size: 2.5em;
  font-weight: bold;
  margin: 40px 0 10px 0;
  color: #333;
  border-bottom: none;
}

/* Year post count */
.year-info {
  font-size: 1.2em;
  color: #666;
  margin-bottom: 30px;
}

/* Month header */
.archive h2 {
  font-size: 1.5em;
  font-weight: 600;
  margin: 30px 0 5px 0;
  color: #444;
}

/* Month post count */
.month-info {
  font-size: 1em;
  color: #666;
  margin-bottom: 15px;
}

/* Posts list container */
.posts-list {
  margin-bottom: 30px;
}

/* Individual archive post */
.archive-post {
  margin-bottom: 8px;
  padding-left: 20px;
}

.archive-post a {
  color: #0066cc;
  text-decoration: none;
  font-size: 1.1em;
  line-height: 1.6;
  display: block;
  transition: color 0.2s ease;
}

.archive-post a:hover {
  color: #004499;
  text-decoration: underline;
}

/* Optional: Add some responsive design */
@media (max-width: 768px) {
  .archive {
    padding: 15px;
  }
  
  .archive h1 {
    font-size: 2em;
  }
  
  .archive h2 {
    font-size: 1.3em;
  }
  
  .archive-post {
    padding-left: 10px;
  }
}
